<div class="flex-container">
  <%= link_to "Create a new restaurant", restaurants_new_path, class: "btn btn-success" %>
  <div class="row">
    <h1 class= "text-center">Restaurants</h1>
    <% @restaurants.each do |restaurant| %>
    <div class="card col-xs-6 col-md-4">
      <h3 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant)%></h3>
       <p class="card-text">Address: <%= restaurant.address %></p>
       <p class="card-text">Phone number: <%= restaurant.phone_number %></p>
       <p class="card-text">Category: <%= restaurant.category %></p>
    </div>
    <% end %>
  </div>
</div>
